    "kill-port": "^2.0.1",
    "nestjs-playwright": "^1.1.1",
    "nestjs-telegraf": "^2.6.3",
    "node-datetime": "^2.1.2",
    "nodemailer": "^6.9.0",
    "nodemon": "^2.0.20",
    "playwright": "^1.30.0",
    "playwright-xpath": "^1.2.0",
    "reflect-metadata": "^0.1.13",
